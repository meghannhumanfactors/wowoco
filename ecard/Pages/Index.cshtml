@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<html>

<head>
    <title>My eCard</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <!--Carousel START -->
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                        <li data-target="#myCarousel" data-slide-to="3"></li>
                        <li data-target="#myCarousel" data-slide-to="4"></li>
                        <li data-target="#myCarousel" data-slide-to="5"></li>
                        <li data-target="#myCarousel" data-slide-to="6"></li>
                    </ol>

                    <!-- Wrapper for slides 15000milliseconds = 15 seconds ...8000milliseconds = 8sec-->

                    <div class="carousel-inner">
                        <div class="item active" data-interval="800000">
                            <a href="" target="_blank"><img src="~/images/card_anniversary.png" class="image-responsive center-block " alt="Anniversary frame" /></a>
                        </div>

                        <div class="item" data-interval="800000">
                            <a href="" target="_blank"><img src="~/images/card_babyshower.png" class="image-responsive center-block" alt="babyshower frame" /></a>
                        </div>


                        <div class="item" data-interval="800000">
                            <a href="" target="_blank"><img src="~/images/card_birthday.png" class="image-responsive center-block " alt="birthday frame" /></a>
                        </div>


                        <div class="item" data-interval="800000">
                            <a href="" target="_blank"><img src="~/images/card_frame_black.png" class="image-responsive center-block" alt="Black frame" /></a>
                        </div>


                        <div class="item" data-interval="800000">
                            <a href="" target="_blank"><img src="~/images/card_frame_gold.png" class="image-responsive center-block" alt="Gold Frame " /> </a>
                        </div>

                        <div class="item" data-interval="800000">
                            <a href="" target="_blank"><img src="~/images/card_frame_wood.png" class="image-responsive center-block " alt="Wood Frame " /> </a>
                        </div>


                        <div class="item" data-interval="800000">
                            <a href="" target="_blank"><img src="~/images/card_valentines.png" class="image-responsive center-block " alt="Valentines Frame" /> </a>
                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>


                </div>
                <!-- Carousel END -->
            </div>

            <div class="col-sm-6">
                <h1>Select a e-Greeting to send to your Friend</h1>
                <!--GRID START -->
                <div class="row">
                    <div class="col-sm-2">
                        <a href="" target="_blank"><img src="~/images/card_anniversary.png" class="img-thumbnail img-circle image-responsive" /></a>
                    </div>

                    <div class="col-sm-2">
                        <a href="" target="_blank"> <img src="~/images/card_babyshower.png" class="img-thumbnail img-circle image-responsive" /></a>
                    </div>

                    <div class="col-sm-2">
                        <a href="" target="_blank"><img src="~/images/card_birthday.png" class="img-thumbnail img-circle image-responsive" /></a>
                    </div>

                    <div class="col-sm-2">
                        <a href="" target="_blank"> <img src="~/images/card_frame_black.png" class="img-thumbnail img-circle image-responsive" /></a>
                    </div>

                    <div class="col-sm-2">
                        <a href="" target="_blank"><img src="~/images/card_frame_gold.png" class="img-thumbnail img-circle image-responsive" /></a>
                    </div>

                    <div class="col-sm-2">
                        <a href="" target="_blank"><img src="~/images/card_frame_wood.png" class="img-thumbnail img-circle image-responsive" /></a>
                    </div>

                    <div class="col-sm-2">
                        <a href="" target="_blank"><img src="~/images/card_valentines.png" class="img-thumbnail img-circle image-responsive" /></a>
                    </div>
                </div>
                <!--GRID END-->
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

</body>
</html>
