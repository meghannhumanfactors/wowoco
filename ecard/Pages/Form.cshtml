@page
@model ecard.Model.Greetings
<div class="container">
    <form action="Preview" method="post">
        <div class="form-group">
            <label asp-for="@Model.friendsName">Friends Name</label>
            <input asp-for="@Model.friendsName" type="text" class="form-control">
            <span asp-validation-for="@Model.friendsName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.friendsEmail">Email address</label>
            <input asp-for="@Model.friendsEmail" type="email" class="form-control">
            <span asp-validation-for="@Model.friendsEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.subject">Subject</label>
            <input asp-for="@Model.subject" type="text" class="form-control">
            <span asp-validation-for="@Model.subject" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.message">Message</label>
            <textarea asp-for="@Model.message" class="form-control"></textarea>
            <div class="countdown"></div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.yourName">Your Name</label>
            <input asp-for="@Model.yourName" type="text" class="form-control">
            <span asp-validation-for="@Model.yourName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.yourEmail">Email address</label>
            <input asp-for="@Model.yourEmail" type="email" class="form-control">
            <span asp-validation-for="@Model.yourEmail" class="text-danger"></span>
        </div>
        @*recaptcha start*@
        <div class="g-recaptcha" data-sitekey="6Le5_S0UAAAAANukdP7UkKR2isiirPXw7DPcZwCb"></div>
        @*recaptcha end*@
        <div class="button">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
@section scripts{
    <script src="~/lib/textarea-autosize/dist/jquery.textarea_autosize.js"></script>
    <script>
        $('textarea').textareaAutoSize();
    </script>
    <script src="~/lib/textareacountdown.js"></script>
    <script src='https://www.google.com/recaptcha/api.js'></script>}
